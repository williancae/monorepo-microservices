        "@swc/helpers": "~0.5.11",
        "@types/node": "~18.16.9",
        "concurrently": "^9.1.2",
        "cross-env": "^7.0.3",
        "eslint": "^9.8.0",
        "eslint-config-prettier": "^10.0.0",
        "husky": "^8.0.0",
        "lint-staged": "^15.5.0",
        "nx": "20.7.1",
        "prettier": "^2.6.2",
        "tslib": "^2.3.0",
        "typescript": "~5.7.2",
        "typescript-eslint": "^8.19.0",
