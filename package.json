        "@nrwl/workspace": "^19.8.4",
        "axios": "^1.6.0",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.1",
        "pg": "^8.14.1",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.8.0",
        "typeorm": "^0.3.22"
    },
    "devDependencies": {
        "@eslint/js": "^9.8.0",
        "@nestjs/schematics": "^10.0.1",
        "@nestjs/testing": "^10.0.2",
        "@nx/eslint": "20.7.1",
        "@nx/eslint-plugin": "20.7.1",
        "@nx/js": "20.7.2",
        "@nx/nest": "20.7.2",
